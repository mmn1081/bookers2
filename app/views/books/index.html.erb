 <div class="container">
 <div class="row">
 <div class='col-md-3'>
  <!--部分テンプレート-->
  <%= render 'book', user: @user, book_new: @book %>
</div>
    <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
          <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>

        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
              <%= image_tag book.user.get_profile_image(50, 50) %></td>
              <% end %>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>