<div class="container">
 <div class="row">
 <div class='col-md-3'>
<%= render 'book', user: @user, book: @book, book_new: @book_new%>
<!--部分テンプレート-->
</div>


<div class='col-md-8 offset-md-1'>
<h2>Book detail</h2>
<table class='table table-hover table-inverse'>
<tbody>
  <tr>
   <th><%= link_to user_path(@user.id) do %>
   <%= image_tag @book.user.get_profile_image(50, 50) %>
   <% end %></th>
   <th><%= link_to @user.name, user_path(@user.id) %></th>
   <th><%= link_to @book.title, book_path(@book.id) %></th>
   <th><%= @book.body %></th>

  <% if @book.user == current_user %>
   <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
   <th><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
  <% end %>
  </tr>
</tbody>
</table>
</div>
</div>
</div>
