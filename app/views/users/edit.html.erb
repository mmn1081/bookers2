<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <label for="inputImage">Image</label></br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
  <label for="inputIntroduction">Intoroduction</label></br>
  <%= f.text_field :introduction %></br>

  <%= f.submit "Update User" %>
<% end %>
</div>
</div>
