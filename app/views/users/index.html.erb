 <div class="container">
 <div class="row">
 <div class='col-md-3'>
  <%= render 'books/book', user: @user, book_new: @book %>
<!--部分テンプレート-->

</div>
<div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>

    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %><!--＠usersはいくつものﾃﾞｰﾀから１つだけ取ったらその名前はuserとする-->
      <tr>
        <td>
          <%= image_tag user.get_profile_image(50, 50) %></td><!--userは|user|のこと-->
        <td><%= user.name %>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
  </tbody>
  </table>
</div>
</div>
</div>